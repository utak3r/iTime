{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-c", "Debug",
                "${workspaceFolder}/iTime.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test"
            ],
            "problemMatcher":"$msCompile",
            "group": "test"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/iTime.sln",
                "-c", "Release",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/iTime.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build WiX installer",
            "type": "process",
            "command": "wix",
            "args": [
                "build",
                "-arch", "x64",
                "-o", "install/iTime-3.0.1.msi",
                "iTime.wxs"
            ]
        }
    ]
}